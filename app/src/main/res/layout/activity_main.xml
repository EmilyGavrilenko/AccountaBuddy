<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_navigation" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@menu/bottom_navigation" />

    <TextView
        android:id="@+id/my_challenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="My Challenges"
        android:textColor="@color/colorPrimary"
        android:textSize = "30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_challenges">

            <Button
                android:id="@+id/charity1"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:text="" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/challenge" />

            <TextView
                android:id="@+id/c1desc"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginLeft="155dp"
                android:text="Go the the Gym"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/c1amount"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="45dp"
                android:text="for at least 1 hour"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/c1deadline"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="95dp"
                android:text="Monday, March 2nd"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textSize="16dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <Button
                android:id="@+id/charity2"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:text="" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/challenge" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:text="Get to Class on Time"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/c2_desc"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="45dp"
                android:background="@android:color/transparent"
                android:text="Physics at 10AM"
                android:textAllCaps="false"
                android:textSize="16dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <Button
                android:id="@+id/charity3"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:text="" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/challenge" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:text="Walk the Dog"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/c3_desc"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="45dp"
                android:background="@android:color/transparent"
                android:text="Chores"
                android:textAllCaps="false"
                android:textSize="16dp" />

        </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>